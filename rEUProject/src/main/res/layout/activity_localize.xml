<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/image_map_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5" >

        <uk.co.senab.photoview.PhotoView
            android:id="@+id/image_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Map!" />

    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView" >

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Local"
                android:id="@+id/checkBoxLocal"
                android:checked="true"
                android:onClick="onClickedCheckBox" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="File"
                android:id="@+id/checkBoxFile"
                android:onClick="onClickedCheckBox" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remote"
                android:id="@+id/checkBoxRemote"
                android:onClick="onClickedCheckBox" />


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remote2"
                android:id="@+id/checkBoxRemote2"
                android:onClick="onClickedCheckBox" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remote3"
                android:id="@+id/checkBoxRemote3"
                android:onClick="onClickedCheckBox" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Private"
                android:id="@+id/checkBoxPrivate"
                android:onClick="onClickedCheckBox" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Private2"
                android:id="@+id/checkBoxPrivate2"
                android:onClick="onClickedCheckBox" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Private3"
                android:id="@+id/checkBoxPrivate3"
                android:onClick="onClickedCheckBox" />
        </RadioGroup>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.5">
        <Button
            android:id="@+id/btn_localize"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="localizeNow"
            android:text="@string/btn_localize"
            android:textSize="20dp" />

        <ToggleButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Auto-Localize"
            android:id="@+id/toggleButton"
            android:layout_weight="1"
            android:singleLine="false"
            android:textOff="Auto-Localize Off"
            android:textOn="Auto-Localize On"
            android:textSize="20dp"
            android:onClick="onToggleClickedAuto"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>

</LinearLayout>